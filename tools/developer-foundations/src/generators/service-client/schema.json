{
  "$schema": "https://json-schema.org/schema",
  "$id": "ServiceClient",
  "title": "Service Client Generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the client to generate",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the client?"
    },
    "serviceLib": {
      "type": "string",
      "description": "Service library name (e.g., google-service-2)",
      "x-prompt": "Which service library should this client be added to?"
    }
  },
  "required": ["name", "serviceLib"]
} 