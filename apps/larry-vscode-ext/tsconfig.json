{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["vscode", "node"],
    "baseUrl": ".",
    "paths": {
      "@codestrap/*": ["../packages/*"]
    }
  },
  "include": ["src/**/*.ts", "../packages/sql-lite/src/**/*.ts", "../packages/types/src/**/*.ts"],
  "exclude": ["webview", "media", "scripts", "node_modules", "dist"]
} 